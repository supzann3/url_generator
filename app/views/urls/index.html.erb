<div>
  <h1>Welcome to the URL shorten Generator</h1>
  <%= form_tag("/generator", action: "generator", method: "get") do %>
    <p> <%= label_tag(:original, "Enter URL") %> </p>
    <%= text_field_tag(:original, nil, :required => true)%>
    <p> <%= submit_tag("Generate") %> </p>
  <% end %>
  <% if @url.present? %>
    <% if @url.errors.full_messages.any? %>
      <% @url.errors.full_messages.each do |error_message| %>
        <span style="color:red"> <%= error_message if @url.errors.full_messages.first == error_message %> <br /> </span>
      <% end %>
    <% end %>
  <% end %>
</div>
